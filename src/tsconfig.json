{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ESNext"
        ],
        "module": "ESNext",
        "outDir": "./dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "@shared/*": [
                "shared/*"
            ]
        },
        "skipLibCheck": true,
        "removeComments": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "exclude": [
        "esbuild.config.js",
        "node_modules",
        "**/*.spec.ts"
    ],
    "require": [
        "ts-node/register/transpile-only"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}